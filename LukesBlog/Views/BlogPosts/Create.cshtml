@model LukesBlog.DataAccessLayer.Models.BlogPost

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Create BlogPost</h1>
    <br>

    @using (Html.BeginForm("Create", "BlogPosts", FormMethod.Post, new { @class = "ui massive form" }))
