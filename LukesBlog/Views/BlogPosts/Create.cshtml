            </div>

            <div class="field">
                @Html.LabelFor(model => model.tag3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.EditorFor(model => model.tag3, new { htmlAttributes = new { @class = "field", @Value = "tagC" } })
                    @Html.ValidationMessageFor(model => model.tag3, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="field">
                @Html.LabelFor(model => model.imgsrc, htmlAttributes: new { @class = "control-label col-md-2" })
