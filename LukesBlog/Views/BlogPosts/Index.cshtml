@model IEnumerable<LukesBlog.DataAccessLayer.Models.BlogPost>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", new { } ,new { @class = "ui blue button" })
    </p>
    <table class="ui selectable inverted table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatePosted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authored)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePosted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Authored)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Likes)
                </td>
                <td>
                    <div class="ui buttons">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "ui blue button" })
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "ui green button" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "ui red button" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>